generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* =======================
   NextAuth Models
   ======================= */

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  image         String?
  emailVerified DateTime?

  accounts      Account[]
  sessions      Session[]
  orders        Order[]

  createdAt     DateTime @default(now())
}


model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/* =======================
   Ecommerce Models
   ======================= */

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  total       Int

  userId      String
  user        User        @relation(fields: [userId], references: [id])

  items       OrderItem[]

  createdAt   DateTime    @default(now())

  @@index([userId])
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  name      String
  price     Int
  quantity  Int

  @@index([orderId])
}
